<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:background="@color/brown_50"
        android:elevation="10dp">


            <ImageButton
                android:id="@+id/btn_edit_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_edit_24" />

            <TextView
                android:id="@+id/txt_Quiztitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:text="@string/quiz_title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_delete_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_delete_24" />





        <LinearLayout
            android:id="@+id/subjectdetals"
            android:layout_width="wrap_content"
            android:layout_below="@id/txt_Quiztitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:text="@string/branch"
                android:textColor="@color/MainRedColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"

                android:text="@string/subject"
                android:textColor="@color/MainRedColor"
                android:textStyle="bold" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_startquiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Quiztitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/MainRedColor"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/isactive"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/txt_Quiztitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="120dp"
            android:src="@drawable/btn_notactive" />

    </RelativeLayout>
</layout>